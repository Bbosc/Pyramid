<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pyramid interface</title>
    <link rel="icon" type="image/x-icon" href="/images/pyramid.ico">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script type="text/javascript" src="/js/displayTasks.js"></script>
</head>
<body>
    <div id="home-image"></div>

    <div id="new-task">
        <h1>Add a new task...</h1>
        <button class="btn" name="add" onclick="popupNewTaskForm()">
            <i id="new-icon" class="fa fa-plus-square fa-2x"></i>
        </button>
    </div>

    <div id="tasks-container">

        <script>
            const tasks = <%- JSON.stringify(tasks)%>;
            window.onload = displayTaskPerTiers(tasks, 4);
            window.onload = displayTaskPerTiers(tasks, 3);
            window.onload = displayTaskPerTiers(tasks, 2);
            window.onload = displayTaskPerTiers(tasks, 1);
            window.onload = displayTaskPerTiers(tasks, 0);
        </script>


    </div>

    <div id="newTaskForm">
        <form action="/tasks/save" method="POST">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required>
            <br><br>
        
            <label for="description">Description:</label>
            <input type="text" id="description" name="description" required>
            <br><br>
        
            <label for="tier">Tier:</label>
            <input type="number" id="tier" name="tier" required>
            <br><br>

            <label for="parents">Parents:</label>
            <input type="text" id="parent" name="parent">
            <br><br>

            <label for="deadline">Deadline:</label>
            <input type="date" id="deadline" name="deadline">
            <br><br>
        
            <button type="submit">Create Item</button>
        </form>
    </div>

</body>
</html>

